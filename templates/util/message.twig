{% set classes = {
    'success':'alert-success',
    'info':'alert-info',
    'warning':'alert-warning',
    'error':'alert-danger'
} %}
<div class="alert {{ classes[msg.type] }} alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    {{ msg.text }}
</div>