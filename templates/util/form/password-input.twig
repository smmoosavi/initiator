{% embed 'util/form/custom-input.twig' with {'name': name,'label': label,'help':help} %}
    {% block input %}
        <input type="password"
               class="form-control"
               name="{{ name }}"
               id="input-{{ name }}"
               placeholder="{{ placeholder|default(label) }}"
               value="{{ value }}">
    {% endblock %}
{% endembed %}